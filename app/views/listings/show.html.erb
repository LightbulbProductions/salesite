<div class="row">
  <div class="col-md-8"><%= image_tag @listing.image_url %></div>
  <div class="col-md-4">
    <h3><strong><%= @listing.name %></strong></h3>
    <p><strong><%= @listing.description %></strong>
    <p><%= number_to_currency @listing.price %></p></p>
  </div>
</div>


<% if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), class:'btn btn-link' %> |
<% end %>
<%= link_to 'Back', listings_path, class:'btn btn-link' %>
